{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "aws_region": "",
        "subet_id": "",
        "source_ami":"",
        "ssh_username":"ubuntu"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "subnet_id" : "{{user `subnet_id`}}",
            "source_ami" : "{{user `source_ami`}}",
            "ami_name": "csye6225_fall2021_{{timetamp}}",
            "ssh_username": "{{uer `ssh_username`}}",
            "ami_description" : "Ubuntu AMI for CSYE 6225",
            "launch_block_device_mappings" : [
                {
                    "device_name" : "/dev/sdal",
                    "volume_size" : 20,
                    "volume_type" : "gp2",
                    "delete_on_termination" : false
                }
            ]
            
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars" : [
                "FOO=foo"
            ],
            "inline":[
                "sudo apt-get update",
                "sudo apt-get install nginx -y"

            ]
        }
    ]
}

